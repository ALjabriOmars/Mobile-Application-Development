<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Item Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_item_label"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/itemSelectionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/spinner_background"
        android:minHeight="48dp" />

    <!-- Quantity Input -->
    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/quantity_hint"
        android:inputType="number"
        android:autofillHints="quantity"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <!-- Duration Input -->
    <EditText
        android:id="@+id/durationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/duration_hint"
        android:inputType="number"
        android:autofillHints="timeDuration"
        android:padding="12dp"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp" />

    <!-- Calculate and Reset Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/calculate_button_label"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            android:minHeight="48dp"
            android:padding="8dp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/reset_button_label"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:minHeight="48dp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Transaction Summary -->
    <TextView
        android:id="@+id/transactionSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transaction_summary_label"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Total Cost -->
    <TextView
        android:id="@+id/totalCostDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_cost_label"
        android:textSize="18sp"
        android:textColor="#333333"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/goBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Back to Admin Page"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:minHeight="48dp"
        android:padding="8dp" />
</LinearLayout>